@{
    ViewData["Title"] = "Panel Ana Sayfa";
}
<div class="container py-4">
    <h2 class="mb-4"><i class="bi bi-speedometer2"></i> Veteriner Paneli - Ana Sayfa</h2>
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-heart-pulse"></i> Toplam Hasta</h5>
                    <p class="card-text display-6">@ViewBag.TotalPatients</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-capsule"></i> Toplam İlaç</h5>
                    <p class="card-text display-6">@ViewBag.TotalMedicines</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-file-text"></i> Toplam Reçete</h5>
                    <p class="card-text display-6">@ViewBag.TotalPrescriptions</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-secondary text-white">
                    <i class="bi bi-bell"></i> Duyurular
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li><i class="bi bi-dot"></i> Sistem bakımı 10 Mayıs'ta yapılacaktır.</li>
                        <li><i class="bi bi-dot"></i> Yeni aşı takvimi eklendi.</li>
                        <li><i class="bi bi-dot"></i> Reçete yazımında güncelleme yapıldı.</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-warning text-dark">
                    <i class="bi bi-lightning-charge"></i> Hızlı Erişim
                </div>
                <div class="card-body">
                    <a href="/Patients" class="btn btn-outline-primary mb-2 w-100"><i class="bi bi-heart-pulse"></i> Hastalar</a>
                    <a href="/Medicines" class="btn btn-outline-success mb-2 w-100"><i class="bi bi-capsule"></i> İlaçlar</a>
                    <a href="/Prescriptions" class="btn btn-outline-info w-100"><i class="bi bi-file-text"></i> Reçeteler</a>
                </div>
            </div>
        </div>
    </div>
</div> 
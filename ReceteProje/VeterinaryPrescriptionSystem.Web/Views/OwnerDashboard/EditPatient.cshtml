@model VeterinaryPrescriptionSystem.Web.Models.Patient
@{
    ViewData["Title"] = "Hayvan Bilgilerini Düzenle";
}
<div class="container" style="max-width:500px;margin:32px auto;">
    <h2>Hayvan Bilgilerini Düzenle</h2>
    <form asp-action="EditPatient" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="mb-3">
            <label class="form-label">Adı</label>
            <input type="text" name="name" class="form-control" value="@Model.Name" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Yaş</label>
            <input type="number" name="age" class="form-control" value="@Model.Age" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Tür</label>
            <input type="text" name="species" class="form-control" value="@Model.Species" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Irk</label>
            <input type="text" name="breed" class="form-control" value="@Model.Breed" required />
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div> 
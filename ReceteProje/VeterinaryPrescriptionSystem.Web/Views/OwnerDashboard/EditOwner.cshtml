@model VeterinaryPrescriptionSystem.Web.Models.OwnerUser
@{
    ViewData["Title"] = "Sahip Bilgilerini Düzenle";
}
<div class="container" style="max-width:500px;margin:32px auto;">
    <h2>Sahip Bilgilerini Düzenle</h2>
    <form asp-action="EditOwner" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="mb-3">
            <label class="form-label">Ad Soyad</label>
            <input type="text" name="name" class="form-control" value="@Model.Name" required />
        </div>
        <div class="mb-3">
            <label class="form-label">E-posta</label>
            <input type="email" name="email" class="form-control" value="@Model.Email" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Telefon</label>
            <input type="text" name="phone" class="form-control" value="@Model.Phone" />
        </div>
        <div class="mb-3">
            <label class="form-label">Adres</label>
            <input type="text" name="address" class="form-control" value="@Model.Address" />
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div> 
@{
    ViewData["Title"] = "Randevu Al";
}
<div class="panel-container" style="max-width:800px;margin:40px auto;background:#fff;border-radius:16px;padding:32px;color:#000;box-shadow:0 2px 12px #0001;">
    <header style="display:flex;justify-content:space-between;align-items:center;margin-bottom:24px;">
        <h1 style="font-size:1.8rem;">Randevu Al</h1>
        <a href="/OwnerAccount/Dashboard" class="btn btn-danger"><i class="fa fa-arrow-left"></i> Geri Dön</a>
    </header>

    <form>
        <div class="mb-3">
            <label for="vet" class="form-label">Veteriner Seçiniz:</label>
            <select id="vet" class="form-control">
                <option>Dr. Ahmet Yýldýz</option>
                <option>Dr. Elif Güneþ</option>
                <option>Dr. Cemre Karaca</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="date" class="form-label">Tarih Seçiniz:</label>
            <input type="date" id="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="time" class="form-label">Saat Seçiniz:</label>
            <input type="time" id="time" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="desc" class="form-label">Açýklama:</label>
            <textarea id="desc" class="form-control" rows="4" placeholder="Randevu nedeni..."></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Randevu Talebi Gönder</button>
    </form>

    <footer style="text-align:center;color:#888;margin-top:32px;">
        <p>© 2025 Veterinerlik Bilgi Sistemi</p>
    </footer>
</div>
